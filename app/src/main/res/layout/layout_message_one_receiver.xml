<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <ImageView
        android:id="@+id/user_head_img"
        android:layout_width="50dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:layout_height="50dp"
        />

    <TextView
        android:id="@+id/message_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/user_head_img"
        android:layout_marginLeft="15dp"
        android:textSize="18dp"
        android:textColor="#999999"
        android:layout_toRightOf="@+id/user_head_img"/>

    <TextView
        android:id="@+id/flag_tv"
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:textColor="#FF0000"
        android:layout_alignTop="@+id/message_tv"
        android:layout_toLeftOf="@+id/message_tv"
        android:layout_height="wrap_content" />

</RelativeLayout>